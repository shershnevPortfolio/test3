extends /layout/app

block content
  .container
    section.section.task-list
        h2.section__header  Мои задачи
        .section__inner
          .section__content
            .task
              .task__content
                .task__info
                  a(href="/").task__project Риск культура
                  span  — Сформировать мотивацию к дальнейшему развитию
                .task__selects-list
                    .task__select
                      .task__select-icon
                        img(src="../../images/rocket.svg", alt="")
                      select(name="task-status").select
                        option(value="" data-color="#D9F5E6" style="background-color: #D9F5E6") В работе
                        option(value="" data-color="rgb(244, 67, 54)" style="background-color: rgb(244, 67, 54);") Нужна проверка
                        option(value="" data-color="rgb(0, 121, 107)" style="background-color: rgb(0, 121, 107);" ) Сделана
                    .task__select
                      .task__select-icon
                          img(src="../../images/human.svg", alt="")
